<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/productIdTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="product Id : "
                android:layout_margin="16dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/productId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/productIdTxt"
                app:layout_constraintTop_toTopOf="@id/productIdTxt"
                app:layout_constraintBottom_toBottomOf="@id/productIdTxt"/>


            <TextView
                android:id="@+id/stateIdTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State Id : "
                android:layout_margin="16dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/stateId"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/stateId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/stateIdTxt"
                app:layout_constraintBottom_toBottomOf="@id/stateIdTxt" />



            <TextView
                android:id="@+id/stateNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State Name : "
                android:layout_margin="16dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productIdTxt"/>

            <TextView
                android:id="@+id/stateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uttrakhand"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/stateNameTxt"
                app:layout_constraintTop_toTopOf="@id/stateNameTxt"
                app:layout_constraintBottom_toBottomOf="@id/stateNameTxt"/>


            <TextView
                android:id="@+id/adminIdTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Id : "
                android:layout_marginEnd="5dp"
               android:layout_marginTop="16dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/adminId"
                app:layout_constraintTop_toBottomOf="@id/stateId"/>

            <TextView
                android:id="@+id/adminId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1230"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/adminIdTxt" />



            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:layout_margin="16dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/adminIdTxt"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-03-02T02: 26: 16"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/dateTxt"
                app:layout_constraintTop_toTopOf="@id/dateTxt"
                app:layout_constraintBottom_toBottomOf="@id/dateTxt"/>



            <TextView
                android:id="@+id/productRateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Amount"
                android:layout_margin="16dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dateTxt"/>

            <TextView
                android:id="@+id/productRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/productRateTxt"
                app:layout_constraintTop_toTopOf="@id/productRateTxt"
                app:layout_constraintBottom_toBottomOf="@id/productRateTxt"/>

            <Button
                android:id="@+id/updateAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Product Amount"
                android:textColor="@color/white"
                android:background="@color/purple"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/productRate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>